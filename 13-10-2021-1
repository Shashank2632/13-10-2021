#include<stdio.h>
int main()
{
    char c,a[100],b[100];
    printf("Enter a sentence:");
    fgets(b,sizeof(b),stdin);
    printf("Enter a Character:");
    c=getchar();
    printf("Enter a word:");
    scanf("%s", a);
    printf("The sentence is:%s",b);
    printf("The word is:");
    puts(a);
    printf("The Character is:%c\n", c);
    return 0;
}
